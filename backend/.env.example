# MCP Bets - Environment Variables Template
# Copy this to .env and fill in your actual values

# ============================================================================
# LLM API Keys (Multi-Judge System)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# SportsDataIO API (Partnership Access)
# ============================================================================
SPORTSDATAIO_API_KEY=your_sportsdataio_api_key_here
SPORTSDATAIO_BASE_URL=https://api.sportsdata.io/v3/nfl

# Rate Limits (adjust based on your subscription tier)
SPORTSDATAIO_REQUESTS_PER_SECOND=2
SPORTSDATAIO_REQUESTS_PER_MONTH=10000
SPORTSDATAIO_BURST_SIZE=5

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_bets
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_bets
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1

# ============================================================================
# API Gateway (for public API endpoints)
# ============================================================================
API_GATEWAY_SECRET_KEY=your_secret_key_for_jwt_here
API_GATEWAY_ALGORITHM=HS256
API_GATEWAY_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# Judge System Configuration
# ============================================================================
# Judge models (do not change unless switching models)
JUDGE_CLAUDE_MODEL=claude-sonnet-4.5
JUDGE_GPT_MODEL=gpt-4o
JUDGE_GEMINI_MODEL=gemini-2.5-pro

# Judge temperature (lower = more consistent)
JUDGE_TEMPERATURE=0.2
JUDGE_MAX_TOKENS=4096

# ============================================================================
# RAG System Configuration
# ============================================================================
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072
RAG_RETRIEVAL_TOP_K=10
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100

# ============================================================================
# Monitoring & Telemetry
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# Budget & Cost Monitoring
# ============================================================================
MONTHLY_API_BUDGET=500.00
BUDGET_ALERT_THRESHOLD=0.80

# ============================================================================
# AWS Configuration (for production deployment)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=mcp-bets-data

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
